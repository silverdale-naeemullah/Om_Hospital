<odoo>
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="date_appointment"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_ongoing" string="Ongoing" type="object"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Mark as Done" type="object"
                            class="oe_highlight" invisible="state != 'ongoing'"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('done', 'cancel')"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="reference"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="date_appointment"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>